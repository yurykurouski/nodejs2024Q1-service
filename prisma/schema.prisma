generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Album {
  id       String  @id @default(uuid())
  name     String
  year     Int
  artistId String?
}

model Artist {
  id     String  @id @default(uuid())
  name   String
  grammy Boolean @default(false)
}

model Track {
  id       String  @id @default(uuid())
  name     String
  artistId String?
  albumId  String?
  duration Int
}

model User {
  id        String   @id @default(uuid())
  login     String
  password  String
  version   Int      @default(autoincrement())
  createdAt DateTime @default(now()) @updatedAt
  updatedAt DateTime @updatedAt
}
